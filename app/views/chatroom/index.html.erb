
<h2 class="ui center aligned medium icon header">
  <div>
      
      <%= image_tag("food-location-pngrepo-com.png", size: "80x80", :alt => "rss feed") %>
  </div>

  <div class="chat_title">
      Hotel Chatroom
      </div>
  
</h2>
<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
  
          <%= render @messages %>
        
        </div>
      </div>
   <div class="extra content">
     <%= form_for(@message,html: {class: "ui reply form", role: "form"}, placeholder: "Enter message", url: message_path, remote: true) do |f| %> <!--handling via ajax remote: true -->
      
    <div class="ui fluid icon input">
      <%= f.text_field :body %>
      <%= f.button '<i class="blue paper plane icon play"></i>'.html_safe %>
     
   
    </div>
      
      <%end%>
   </div>
  </div>
</div>


<div class="four wide column">
<div class="ui fluid raised card chatbox">
  <div class="content">

               <div class="ui secondary vertical pointing menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
     </div>
  </div>
</div>
</div>